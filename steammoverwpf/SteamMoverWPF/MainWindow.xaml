<Window x:Class="SteamMoverWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="723" Width="852">
    <Window.Resources>
        <Style TargetType="DataGridCell" x:Key="ActiveCellStyle">
            <Setter Property="Foreground" Value="Red"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding RealSizeOnDisk_isChecked}" Value="{x:Null}">
                    <Setter Property="Foreground" Value="Green"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding RealSizeOnDisk_isChecked}" Value="True">
                    <Setter Property="Foreground" Value="Black"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Grid>
        <ComboBox ItemsSource="{Binding LibraryList, Mode=OneWay}" DisplayMemberPath="LibraryDirectory" x:Name="comboBoxLeft" HorizontalAlignment="Left" Margin="21,70,0,0" VerticalAlignment="Top" Width="326" SelectionChanged="comboBoxLeft_SelectedIndexChanged"/>
        <ComboBox ItemsSource="{Binding LibraryList, Mode=OneWay}" DisplayMemberPath="LibraryDirectory" x:Name="comboBoxRight" HorizontalAlignment="Left" Margin="474,70,0,0" VerticalAlignment="Top" Width="350" SelectionChanged="comboBoxRight_SelectedIndexChanged"/>
        <DataGrid ItemsSource="{Binding GamesLeft, Mode=OneWay}" x:Name="dataGridLeft" HorizontalAlignment="Left" Margin="21,130,0,0" VerticalAlignment="Top" Height="372" Width="326" AutoGenerateColumns="False" CanUserAddRows="False" CanUserDeleteRows="False" SelectionMode="Single" CanUserResizeRows="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Game name" Binding="{Binding GameName}" SortMemberPath="GameName" Width="*" />
                <DataGridTextColumn Header="Size on disk" Binding="{Binding RealSizeOnDiskString}" CellStyle="{StaticResource ActiveCellStyle}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
        <DataGrid ItemsSource="{Binding GamesRight, Mode=OneWay}" x:Name="dataGridRight" HorizontalAlignment="Left" Margin="474,130,0,0" VerticalAlignment="Top" Height="372" Width="360"  AutoGenerateColumns="False" CanUserAddRows="False" CanUserDeleteRows="False" SelectionMode="Single" CanUserResizeRows="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Game name" Binding="{Binding GameName}" Width="*" />
                <DataGridTextColumn Header="Size on disk" Binding="{Binding RealSizeOnDiskString}" CellStyle="{StaticResource ActiveCellStyle}" Width="*" />
            </DataGrid.Columns>
        </DataGrid>
        <Button x:Name="buttonRight" Content="-&gt;" HorizontalAlignment="Left" Margin="379,234,0,0" VerticalAlignment="Top" Width="75" Click="buttonRight_Click_1"/>
        <Button x:Name="buttonLeft" Content="&lt;-" HorizontalAlignment="Left" Margin="379,335,0,0" VerticalAlignment="Top" Width="75" Click="buttonLeft_Click_1"/>
        <Menu x:Name="menu" HorizontalAlignment="Left" Height="23" VerticalAlignment="Top" Width="338">
            <MenuItem Header="File">
                <MenuItem Header="MenuItem" HorizontalAlignment="Left" Width="140"/>
                <MenuItem Header="MenuItem" HorizontalAlignment="Left" Width="140"/>
            </MenuItem>
            <MenuItem Header="Edit">
                <MenuItem Header="MenuItem" HorizontalAlignment="Left" Width="140"/>
            </MenuItem>
            <MenuItem Header="View"/>
            <MenuItem Header="Help"/>
            <MenuItem Header="Help"/>
        </Menu>
        <Button x:Name="button" Content="Button" HorizontalAlignment="Left" Margin="152,602,0,0" VerticalAlignment="Top" Width="75" Click="button_Click"/>
        <Label  x:Name="label" Content="{Binding SteamPath, Mode=OneWay}" HorizontalAlignment="Left" Margin="10,28,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
